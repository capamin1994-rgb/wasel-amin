<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>إتمام الدفع | واصل</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #667eea;
            --primary-dark: #5a67d8;
            --secondary: #764ba2;
            --dark: #1a202c;
            --light: #f7fafc;
            --border: #e2e8f0;
            --sat: env(safe-area-inset-top);
            --sab: env(safe-area-inset-bottom);
            --sal: env(safe-area-inset-left);
            --sar: env(safe-area-inset-right);
        }

        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            margin: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: calc(20px + var(--sat)) calc(20px + var(--sar)) calc(20px + var(--sab)) calc(20px + var(--sal));
        }

        .payment-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 900px;
            overflow: hidden;
            display: grid;
            grid-template-columns: 1fr 1.2fr;
        }

        @media (max-width: 768px) {
            .payment-container {
                grid-template-columns: 1fr;
            }
        }

        .summary-section {
            background: var(--dark);
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .payment-section {
            padding: 40px;
        }

        h2 {
            margin-top: 0;
        }

        .plan-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

        .price-tag {
            font-size: 2.5em;
            font-weight: bold;
            color: var(--primary);
        }

        .method-card {
            border: 2px solid #eee;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .method-card:hover,
        .method-card.active {
            border-color: var(--primary);
            background: #f0fdf4;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .input-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .input-group input,
        .input-group select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-family: inherit;
        }

        .btn-submit {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            border: none;
            width: 100%;
            padding: 15px;
            border-radius: 10px;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
        }

        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .method-details {
            display: none;
            margin-top: 10px;
            background: #f9fafb;
            padding: 10px;
            border-radius: 8px;
            font-size: 0.9em;
        }

        .method-card.active .method-details {
            display: block;
        }

        /* Steps */
        .steps {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .step {
            flex: 1;
            padding: 12px;
            border-radius: 10px;
            background: #f3f4f6;
            text-align: center;
            font-weight: 600;
            color: #6b7280;
        }

        .step.active {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        /* Upload preview */
        .preview {
            border: 1px dashed #ddd;
            padding: 10px;
            border-radius: 8px;
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .preview img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
        }

        .preview .meta {
            font-size: 0.9em;
            color: #374151
        }

        .admin-note {
            background: #fff7ed;
            border: 1px solid #ffedd5;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 15px;
            color: #92400e
        }



        /* small animations */
        @keyframes pop {
            from {
                transform: scale(.98);
                opacity: 0
            }

            to {
                transform: scale(1);
                opacity: 1
            }
        }

        .payment-container {
            animation: pop .35s ease;
        }

        .upload-zone {
            border: 2px dashed #ddd;
            border-radius: 10px;
            padding: 30px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            background: #f9fafb;
        }

        .upload-zone:hover,
        .upload-zone.dragover {
            border-color: var(--primary);
            background: #f0fdf4;
        }
    </style>
</head>

<body>

    <div class="payment-container">
        <!-- Summary Side -->
        <div class="summary-section">
            <h2><i class="fas fa-shopping-cart"></i> ملخص الطلب</h2>
            <div class="plan-card">
                <h3>
                    <%= plan.name %>
                </h3>
                <div class="price-tag">
                    <%= plan.price %> ج.م
                </div>
                <p>مدة الاشتراك: <%= plan.duration_days %> يوم</p>
                <ul>
                    <% const features=JSON.parse(plan.features || '{}' ); %>
                        <% if(features.prayer_times) { %>
                            <li><i class="fas fa-check"></i> مواقيت الصلاة</li>
                            <% } %>
                                <% if(features.adhkar) { %>
                                    <li><i class="fas fa-check"></i> الأذكار اليومية</li>
                                    <% } %>
                                        <% if(features.support) { %>
                                            <li><i class="fas fa-check"></i> دعم فني</li>
                                            <% } %>
                </ul>
            </div>
            <p style="margin-top: 20px; opacity: 0.8; font-size: 0.9em;">
                بإتمام عملية الدفع، أنت توافق على شروط الخدمة وسياسة الاستخدام.
            </p>
        </div>

        <!-- Payment Form Side -->
        <div class="payment-section">
            <h2 style="color: var(--dark); margin-bottom: 10px;">اختر طريقة الدفع</h2>

            <div class="steps" aria-hidden="true">
                <div class="step active" id="step-1">1. اختر الطريقة</div>
                <div class="step" id="step-2">2. ارفع الإيصال</div>
                <div class="step" id="step-3">3. تأكيد</div>
            </div>

            <form action="/payment/submit" method="POST" enctype="multipart/form-data" id="paymentForm">
                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="planId" value="<%= plan.id %>">
                <input type="hidden" name="amount" value="<%= plan.price %>">
                <input type="hidden" name="method" id="selectedMethod" value="vodafone_cash">

                <div class="admin-note">
                    يتم خصم المبلغ (<strong>
                        <%= plan.price %> ج.م
                    </strong>) من رصيد المدير عند تأكيد الدفع.
                </div>

                <% if (paymentMethods.vodafone_cash && paymentMethods.vodafone_cash.enabled) { %>
                    <!-- Vodafone Cash -->
                    <div class="method-card active" onclick="selectMethod(this, 'vodafone_cash')">
                        <div style="display: flex; align-items: center; justify-content: space-between;">
                            <div>
                                <i class="fas fa-mobile-alt" style="color: #c40000; font-size: 1.2em;"></i>
                                <span style="margin-right: 10px; font-weight: bold;">فودافون كاش (Vodafone Cash)</span>
                            </div>
                            <i class="fas fa-check-circle check-icon" style="color: var(--primary);"></i>
                        </div>
                        <div class="method-details">
                            <p>
                                <%= paymentMethods.vodafone_cash.instructions || 'حول المبلغ إلى الرقم التالي:' %>
                            </p>
                            <h3 dir="ltr" style="text-align: right; color: #c40000;">
                                <%= paymentMethods.vodafone_cash.number %>
                            </h3>
                        </div>
                    </div>
                    <% } %>

                        <% if (paymentMethods.instapay && paymentMethods.instapay.enabled) { %>
                            <!-- Instapay -->
                            <div class="method-card" onclick="selectMethod(this, 'instapay')">
                                <div style="display: flex; align-items: center; justify-content: space-between;">
                                    <div>
                                        <i class="fas fa-university" style="color: #4B0082; font-size: 1.2em;"></i>
                                        <span style="margin-right: 10px; font-weight: bold;">إنستا باي (InstaPay)</span>
                                    </div>
                                    <i class="far fa-circle check-icon" style="color: #ccc;"></i>
                                </div>
                                <div class="method-details">
                                    <p>
                                        <%= paymentMethods.instapay.instructions || 'حول إلى عنوان الدفع (VPA):' %>
                                    </p>
                                    <h3 dir="ltr" style="text-align: right; color: #4B0082;">
                                        <%= paymentMethods.instapay.address %>
                                    </h3>
                                    <% if(paymentMethods.instapay.phone) { %>
                                        <p>أو إلى رقم الهاتف:</p>
                                        <h4 dir="ltr" style="text-align: right;">
                                            <%= paymentMethods.instapay.phone %>
                                        </h4>
                                        <% } %>
                                </div>
                            </div>
                            <% } %>

                                <hr style="margin: 30px 0; border: none; border-top: 1px solid #eee;">

                                <h3 style="margin-bottom: 12px;">تأكيد التحويل</h3>

                                <div class="input-group">
                                    <label>رقم العملية / المرجع (اختياري)</label>
                                    <input type="text" name="transactionRef"
                                        placeholder="مثال: أدخل آخر 4 أرقام من الرقم المحول منه">
                                </div>

                                <div class="input-group">
                                    <label>صورة الإيصال (سكرين شوت) <span style="color: red">*</span></label>
                                    <div class="upload-zone" id="uploadZone">
                                        <input type="file" name="receipt" id="receiptInput" required accept="image/*"
                                            style="display:none;">
                                        <div class="upload-content">
                                            <i class="fas fa-cloud-upload-alt"
                                                style="font-size: 2em; color: var(--primary); margin-bottom: 10px;"></i>
                                            <p style="margin: 0; color: #666;">اضغط هنا لرفع الصورة أو اسحبها هنا</p>
                                        </div>
                                    </div>
                                </div>

                                <div id="previewArea" style="display:none; margin-bottom:12px;">
                                    <div class="preview">
                                        <img id="previewImg" src="#" alt="preview">
                                        <div class="meta">
                                            <div id="previewName"></div>
                                            <div id="previewSize" style="font-size:0.85em; color:#9CA3AF"></div>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn-submit" id="submitBtn" disabled>
                                    <i class="fas fa-lock"></i> تأكيد الدفع
                                </button>

                                <div
                                    style="margin-top: 20px; text-align: center; font-size: 0.9em; display: flex; justify-content: center; gap: 15px;">
                                    <a href="/" style="color: var(--primary); text-decoration: none;"><i
                                            class="fas fa-home"></i> الرئيسية</a>
                                    <span style="color: #ccc;">|</span>
                                    <a href="/logout" style="color: var(--primary); text-decoration: none;"><i
                                            class="fas fa-sign-out-alt"></i> تسجيل خروج</a>
                                </div>
            </form>
        </div>
    </div>

    <script>
        function selectMethod(card, method) {
            // Remove active class from all
            document.querySelectorAll('.method-card').forEach(el => {
                el.classList.remove('active');
                const icon = el.querySelector('.check-icon');
                if (icon) { icon.className = 'far fa-circle check-icon'; icon.style.color = '#ccc'; }
            });

            // Add active to clicked
            card.classList.add('active');
            const icon = card.querySelector('.check-icon');
            if (icon) { icon.className = 'fas fa-check-circle check-icon'; icon.style.color = '#25D366'; }

            // Update hidden input
            document.getElementById('selectedMethod').value = method;

            // Move to next step UI
            document.getElementById('step-1').classList.remove('active');
            document.getElementById('step-2').classList.add('active');
            // enable file input focus
            const receipt = document.getElementById('receiptInput');
            if (receipt) receipt.focus();
        }

        // File preview and enabling submit
        const receiptInput = document.getElementById('receiptInput');
        const uploadZone = document.getElementById('uploadZone');
        const previewArea = document.getElementById('previewArea');
        const previewImg = document.getElementById('previewImg');
        const previewName = document.getElementById('previewName');
        const previewSize = document.getElementById('previewSize');
        const submitBtn = document.getElementById('submitBtn');
        const step2 = document.getElementById('step-2');
        const step3 = document.getElementById('step-3');

        if (uploadZone && receiptInput) {
            // Click to upload
            uploadZone.addEventListener('click', () => receiptInput.click());

            // Drag and drop
            uploadZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadZone.classList.add('dragover');
            });
            uploadZone.addEventListener('dragleave', () => {
                uploadZone.classList.remove('dragover');
            });
            uploadZone.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadZone.classList.remove('dragover');
                if (e.dataTransfer.files.length) {
                    receiptInput.files = e.dataTransfer.files;
                    handleFiles(e.dataTransfer.files[0]);
                }
            });

            receiptInput.addEventListener('change', (e) => {
                handleFiles(e.target.files[0]);
            });
        }

        function handleFiles(file) {
            if (!file) {
                previewArea.style.display = 'none';
                submitBtn.disabled = true;
                return;
            }

            // Preview
            const reader = new FileReader();
            reader.onload = function (ev) {
                previewImg.src = ev.target.result;
                previewArea.style.display = 'block';
                previewName.textContent = file.name;
                previewSize.textContent = Math.round(file.size / 1024) + ' KB';
                submitBtn.disabled = false;

                // update steps
                step2.classList.remove('active');
                step3.classList.add('active');
            };
            reader.readAsDataURL(file);
        }

        // Form submit: small UX hint
        const form = document.getElementById('paymentForm');
        if (form) {
            form.addEventListener('submit', () => {
                submitBtn.disabled = true;
                submitBtn.textContent = 'جاري التأكيد...';
            });
        }
    </script>
</body>

</html>