                        <td data-label="التاريخ">${new Date(req.created_at).toLocaleDateString('ar-EG')}</td>
                        <td data-label="النوع">
                            <span style="background: ${typeColor}20; color: ${typeColor}; padding: 4px 10px; border-radius: 12px; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 4px;">
                                <i class="fas ${isPayment ? 'fa-money-bill-wave' : 'fa-user-clock'}"></i>
                                ${typeLabel}
                            </span>
                        </td>
                        <td data-label="الإجراءات">
                            ${isPayment ? `
                                <button class="action-btn primary" onclick="approvePayment(${req.id})"><i class="fas fa-check"></i> قبول</button>
                                <button class="action-btn danger" onclick="rejectPayment(${req.id})"><i class="fas fa-times"></i> رفض</button>
