{
  "name": "whatsapp-saas-platform",
  "version": "1.0.18",
  "description": "SaaS WhatsApp Platform",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "health-check": "node health-check.js",
    "test": "jest --forceExit --detectOpenHandles",
    "postinstall": "npm rebuild sqlite3 2>/dev/null || true",
    "testsprite:server": "node tools/testsprite.js server",
    "testsprite:run": "node tools/testsprite.js run",
    "testsprite:rerun": "node tools/testsprite.js rerun",
    "migrate": "node scripts/migrate.js",
    "reset-admin": "node scripts/reset_admin.js",
    "clean": "npm cache clean --force",
    "rebuild": "npm rebuild",
    "cleanup-deps": "node scripts/cleanup-dependencies.js",
    "fresh-install": "npm run clean && npm run cleanup-deps",
    "docker-build": "docker build -t wasel-app .",
    "docker-run": "docker run -p 3001:3001 wasel-app"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.21",
    "adhan": "^4.4.3",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bindings": "^1.5.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "hijri-date": "^0.2.2",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.0.2",
    "moment-timezone": "^0.6.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.8.3",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@testsprite/testsprite-mcp": "^0.0.18",
    "jest": "^29.7.0",
    "supertest": "^7.1.4"
  },
  "overrides": {
    "glob": "^10.0.0",
    "rimraf": "^5.0.0",
    "inflight": "^1.0.6"
  }
}
